<h1>Sistema Escola</h1>

<h2>Alunos</h2>
<table>
    <thead>
    <tr>
        <th>id</th>
        <th>Nome</th>
        <th>Classe</th>
        <th>Data de Nascimento</th>
        <th>Status</th>
    </tr>
    </thead>
<%= link_to 'Novo', new_aluno_path %>
<tbody>
    <% @alunos.each do |aluno|%>
    <tr>
        <td><%= aluno.id%></td>
        <td><%= aluno.nome%></td>
        <td><%= aluno.classe%></td>
        <td><%= aluno.data_nasc%></td>
        <td><%= aluno.status%></td>
        <td><%= link_to 'Mostrar', aluno %></td>
        <td><%= link_to 'Editar', edit_aluno_path(aluno)%></td>
        <td><%= link_to 'Excluir', aluno,method: :delete, data:{confirm: 'Tem certeza que deseja excluir?'}%></td>
    </tr>
    <%end%>
</tbody>
</table>
<br>
